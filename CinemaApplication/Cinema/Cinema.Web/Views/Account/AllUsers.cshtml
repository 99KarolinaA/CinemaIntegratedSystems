@model List<Cinema.Domain.CinemaUser>

@{
    ViewData["Title"] = "All Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    @for (int i = 0; i < Model.Count; i++)
    {
        var item = Model[i];

        if (i % 3 == 0)
        {
            @:<div class="row">
            }


            <div class="col-md-3 m-5">
                <div class="card" style="width: 22rem; height: 15rem;">
                    <div class="card-body">
                        <h5 class="card-title">@item.Email</h5>
                        <h6>User Name: @item.UserName</h6>
                        <h6>Role: @item.Role</h6>
                    </div>

                    <div class="card-footer">
                       @if(item.Role.Equals("Administrator"))
                        { 
                        <a asp-controller="Account" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Make Standard User</a>
                        }
                        else {
                        <a asp-controller="Account" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Make Administrator</a>
                        }

                    </div>
                </div>
            </div>



            if (i % 3 == 2)
            {
            @:</div>
        }
    }

</div>