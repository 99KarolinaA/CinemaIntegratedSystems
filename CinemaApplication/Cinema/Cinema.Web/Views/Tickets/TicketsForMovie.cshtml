@model List<Cinema.Domain.DomainModels.Ticket>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="m-3">
        <a asp-controller="Tickets" asp-action="Create" asp-route-movieId="@Model[0].MovieId" class="btn btn-secondary">Add Ticket for this Movie</a>

    </div>

    @for (int i = 0; i < Model.Count; i++)
    {
        var item = Model[i];

        if (i % 3 == 0)
        {
            @:<div class="row">
            }


            <div class="col-md-3 m-4">
                <div class="card" style="width: 18rem; height: 20rem;">


                    <div class="card-body">
                        <h3 class="card-title">@item.Movie.Title</h3>
                        <h6> Movie Category: @item.Movie.Genre</h6>
                        <h6>Price: @item.Price</h6>
                        <h6>Date: @item.Date</h6>
                    </div>

                    <div class="card-footer">

                        <a asp-controller="Tickets" asp-action="AddToShoppingCart" asp-route-id="@item.Id" class="btn btn-info">Add to Card</a>
                        <a asp-controller="Tickets" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Edit</a>
                        <a asp-controller="Tickets" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                        <a asp-controller="Tickets" asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">Details</a>
                    </div>
                </div>
            </div>



            if (i % 3 == 2)
            {
            @:</div>
        }
    }

</div>